#! /bin/sh

# This test script validates all *.html files as XHTML.

set -e
e=0
fail=
IFS=$(printf '\n\t')
for i in "${srcdir}"/*.html ; do
    xmllint --postvalid --noout "$i" || { e=1 ; fail="$i${fail:+" "}$fail" ; }
done
if [ $e != 0 ] ; then
    echo >&2 ">>>>> Invalid XHTML in files: ${fail}."
fi
exit $e
